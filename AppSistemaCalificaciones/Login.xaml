<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSistemaCalificaciones.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Login Sistema de calificaciones" HorizontalTextAlignment="Center" TextColor="White" FontSize="26"/>
            </Frame>

            <Label>CREDENCIALES DE INGRESO </Label>
            
            <Entry x:Name="txtUsuario" Keyboard="Text" Placeholder="Ingrese el nombre de usuario"/>
            <Entry x:Name="txtPassword" Placeholder="Ingrese el password" IsPassword="True"/>

            <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>